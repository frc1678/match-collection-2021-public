<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:id="@+id/linear_layout_panels"
        android:baselineAligned="false"
        android:padding="30dp"
        android:keepScreenOn="true">
        <fragment
            android:name="com.example.match_collection.CounterPanel"
            android:id="@+id/robotOne"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:paddingTop="30dp"/>
        <fragment
            android:name="com.example.match_collection.CounterPanel"
            android:id="@+id/robotTwo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:paddingTop="30dp"/>
        <fragment
            android:name="com.example.match_collection.CounterPanel"
            android:id="@+id/robotThree"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:paddingTop="30dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_proceed_edit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/btn_proceed">
    </Button>
</LinearLayout>